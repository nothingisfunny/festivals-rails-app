<%= form_for @festival do |f| %>
<%= f.label :name %></br>
<%= f.text_field :name %></br>
<%= f.label :category %></br>
<%= f.collection_select(:category, Category.all, :id, :name) %></br>
<%= f.label :location %></br>
<%= f.text_field :location %></br>
<%= f.label :venue %></br>
<%= f.text_field :venue %></br>
<%= f.label :line_up %></br>
<%= f.text_field :line_up %></br>
<%= f.label :website %></br>
<%= f.text_field :website %></br>
<%= f.submit %>
<% end %>