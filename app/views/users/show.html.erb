<div class="user-field">
<% if @user.name %>
	Name: <%= @user.name%></br>
<% end %>
Email: <%= @user.email %></br>
<div class="btn">
<% if @user == current_user %>
	<%= link_to "Edit Profile", edit_user_path(current_user) %><br>
<% end %>
</div><br>
Upcoming Events: 
<% if UserFestival.where(user_id: @user.id, status: "going").count == 0 %>
	nothing here yet
<% else %>
	<% UserFestival.where(user_id: @user.id, status: "going").to_a.each do |userfestival| %>
		<% festival = Festival.find(userfestival.festival_id) %>
		<%= link_to festival.name, festival_path(festival) %>
	<% end %>
<% end %>
<br>

Saved Events:
<% if UserFestival.where(user_id: @user.id, status: "interested").count == 0 %>
	nothing here yet
<% else %>
	<% UserFestival.where(user_id: @user.id, status: "interested").to_a.each do |userfestival| %>
		<% festival = Festival.find(userfestival.festival_id) %>
		<%= link_to festival.name, festival_path(festival) %>
	<% end %>
<% end %><br>
<% if @user == current_user %>
	<% if Festival.where(creator_id: current_user.id).count != 0 %>
	<div class="btn">
	<% if @user == current_user %>
		<%= link_to "My Festivals", user_festivals_path(current_user) %>
	<% end %>
	</div>
<% end %>
<% end %>
</div>
